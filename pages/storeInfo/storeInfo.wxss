.secant {
    width: 100%;
    height: 16rpx;
    background-color: #f6f6f8;
}
.backColor{
    background: #fff;
}

/* top店铺信息View */

.topStoreInfoView {
    width: 100%;
    height: 176rpx;
    border-top: 2rpx solid #f6f6f8;
}

.topStoreTxt {
    margin-left: 40rpx;
}

/* 三个信息栏 */

.storeDetails {
    width: 100%;
    box-sizing: border-box;
    padding-left: 40rpx;
    font-size: 32rpx;
}

.deatilsView {
    width: 100%;
    height: 124rpx;
    box-sizing: border-box;
    border-top: 2rpx solid #f6f6f8;
    padding-right: 40rpx;
    justify-content: start;
}

.placeClass {
    color: #c7c7cc;
    font-size: 32rpx;
}

input {
    width: 346rpx;
    color: #1c1c1c;
    font-size: 32rpx;
    margin-left: 40rpx;
    position: relative;
    top: 2rpx;
}

/* 两个自动获取按钮 */

#getTelBtn, #getAddressBtn {
    width: 142rpx;
    height: 48rpx;
    border-radius: 32rpx;
    border: 2rpx solid rgba(28, 28, 28, 1);
    text-align: center;
    line-height: 48rpx;
    font-size: 24rpx;
    color: #1c1c1c;
    background-color: #fff;
    padding: 0;
}

/* 店铺地址 */

.storeAddress {
    width: 100%;
    box-sizing: border-box;
    border-top: 2rpx solid #f6f6f8;
    padding-right: 40rpx;
    justify-content: start;
    min-height: 124rpx;
    max-height: 300rpx;
}

#textarea {
    width: 346rpx;
    margin-left: 40rpx;
}

/* 上传二维码 */

.topUpQrView {
    width: 100%;
    box-sizing: border-box;
    padding: 28rpx 40rpx 8rpx;
}

.qrListView {
    width: 100%;
    margin-top: 34rpx;
}

.popUpView {
    width: 100%;
    justify-content: start;
}

.popUpBtn {
    width: 196rpx;
    height: 196rpx;
    box-sizing: border-box;
    border: 2rpx solid #efeff1;
    padding-top: 50rpx;
    margin-bottom: 20rpx;
    background: #fbfbfb;
}

.addIcon {
    color: rgba(0, 0, 0);
    font-size: 80rpx;
    text-align: center;
    line-height: 0rpx;
}

.upText {
    text-align: center;
    font-size: 28rpx;
    color: rgba(0, 0, 0, 0.65);
    margin-top: 46rpx;
}

.myQrView {
    width: 196rpx;
    height: 196rpx;
    /* border: 2rpx dashed #d9d9d9; */
    margin-left: 20rpx;
    margin-bottom: 20rpx;
    box-sizing: border-box;
}

.myQrView:nth-child(3n+1) {
    margin-left: 0;
}

.myQrView image {
    width: 196rpx;
    height: 196rpx;
}

/* 下一步 */

.nextStepView {
    width: 100%;
    height: 222rpx;
    background-color: #f6f6f8;
    position: relative;
}

.nextBtn {
    width: 670rpx;
    height: 96rpx;
    background: rgba(255, 85, 119, 1);
    box-shadow: 0px 12rpx 24rpx 0px rgba(255, 85, 119, 0.24);
    border-radius: 48rpx;
    text-align: center;
    line-height: 96rpx;
    color: white;
    position: relative;
}
