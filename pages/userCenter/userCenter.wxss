.bg {
    background-color: #f2f2f2;
}

.topUserView {
    width: 100%;
    height: 300rpx;
    background-color: #fff;
}

.userViewItem {
    width: 100%;
    box-sizing: border-box;
    padding: 0 40rpx;
    position: absolute;
}

.userInfo {
    width: 100%;
    height: 176rpx;
    box-sizing: border-box;
    border-bottom: 2rpx solid #f6f6f8;
    display: flex;
    justify-content: start;
    align-items: center;
    position: relative;
}

.userIcon {
    width: 96rpx;
    height: 96rpx;
    border-radius: 50%;
    overflow: hidden;
    margin-right: 24rpx;
}

.userName {
    width: 500rpx;
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
    letter-spacing: -0.96rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-top: 14rpx;
}

.rightFlow {
    width: 50rpx;
    height: 42rpx;
    position: absolute;
    right: 40rpx;
}

.rightFlow image {
    width: 16rpx;
    height: 28rpx;
    position: absolute;
    right: 0;
}

.myPosterTxt {
    height: 124rpx;
    line-height: 124rpx;
    font-size: 36rpx;
    color: #333;
    letter-spacing: -0.96rpx;
    font-weight: bold;
}

.bellView {
    width: 72rpx;
    height: 80rpx;
    position: relative;
    text-align: center;
    line-height: 80rpx;
}

.bellView text {
    display: inline-block;
    width: 10rpx;
    height: 10rpx;
    background: #f57;
    border-radius: 50%;
    position: absolute;
    right: 10rpx;
    top: 10rpx;
}

.bellView image {
    width: 36rpx;
    height: 40rpx;
}

/* scrollView */

.myTemp {
    width: 100%;
}

.myTempBox {
    width: 100%;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}

.noMyTempList {
    width: 100%;
    text-align: center;
    color: #888;
    font-size: 28rpx;
}

#myTempScroll {
    box-sizing: border-box;
    padding: 0rpx 24rpx 10rpx;
}

.myTempList {
    margin-bottom: 24rpx;
    position: relative;
}

.myTempList:first-child {
    margin-top: 24rpx;
}

.myTempList:nth-child(2) {
    margin-top: 24rpx;
}

.myTempIcon, .myTempIcon image {
    width: 340rpx;
    height: 560rpx;
    position: relative;
}

.myTempDes {
    width: 100%;
    height: 88rpx;
    box-sizing: border-box;
    background-color: #fff;
    position: relative;
}

.myTempDetail {
    width: 100%;
    box-sizing: border-box;
    padding: 8rpx 24rpx;
    color: #333;
    letter-spacing: -0.64px;
    text-align: center;
    line-height: 20rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.myTempDetail text {
    display: inline-block;
    line-height: 32rpx;
}

.myTempDetail text:last-child {
    width: 96rpx;
    height: 32rpx;
    box-sizing: border-box;
    border: 2rpx solid #000;
    border-radius: 16rpx;
}

.point {
    width: 100%;
    font-size: 40rpx;
    font-weight: bold;
    position: absolute;
    bottom: 10rpx;
    left: 24rpx;
}

.pointMask {
    width: 100rpx;
    height: 42rpx;
    position: absolute;
    bottom: 0;
}

.hover-class {
    background: #fff;
}

/* popview */

.popView {
    width: 100%;
    height: 100vh;
    background: rgba(28, 28, 28, 0.7);
    position: absolute;
    top: 0;
    left: 0;
}

.popViewBody {
    width: 100%;
    height: 212rpx;
    background: #f6f6f8;
    position: absolute;
    bottom: 0rpx;
    left: 0;
}

.deleteView, .cancelView {
    width: 100%;
    height: 100rpx;
    background: #fff;
    line-height: 100rpx;
    text-align: center;
    font-size: 34rpx;
    color: #000;
}

.deleteView {
    margin-bottom: 12rpx;
}

.cancelView {
}

/* 登录遮罩 */

.goToLogo {
    width: 100%;
    height: 100vh;
    position: absolute;
    top: 0;
    left: 0;
}
