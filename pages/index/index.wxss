.bg {
    background: #f6f6f8;
    overflow: hidden;
}

.topSwiper, swiper, swiper-item {
    width: 710rpx;
    height: 300rpx;
    margin: 0rpx auto;
    border-radius: 16rpx 16rpx;
}

.topSwiper {
    margin-top: 20rpx;
    box-shadow: 0px 6rpx 12rpx 0px rgba(229, 229, 229, 1);
}

.topSwiper image {
    width: 710rpx;
    height: 300rpx;
    border-radius: 16rpx 16rpx;
}

.publicityTxt {
    width: 100%;
    height: 116rpx;
    font-size: 36rpx;
    color: #000;
    font-weight: bold;
    font-family: PingFangSC-Medium;
    box-sizing: border-box;
    padding: 0 40rpx;
    line-height: 116rpx;
}

.publicityTemp {
    width: 100%;
    box-sizing: border-box;
    padding: 0 24rpx;
}

.tempBox {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}

.tempList {
    width: 340rpx;
    margin-bottom: 24rpx;
}

.tempIcon image {
    box-shadow: 0px 6rpx 12rpx 0px rgba(229, 229, 229, 1);
}

.tempIcon, .tempIcon image {
    width: 340rpx;
    height: 240rpx;
    border-radius: 8rpx;
}

.tempName {
    font-size: 32rpx;
    color: #3b3b3b;
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-top: 14rpx;
}
