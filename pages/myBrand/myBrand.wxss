.bg {
    background-color: #f6f6f8;
}

.topUserView {
    width: 100%;
    height: 308rpx;
    background-color: #fff;
}

.userViewItem {
    width: 100%;
    box-sizing: border-box;
    padding: 0 40rpx;
}

.userInfo {
    width: 100%;
    height: 176rpx;
    box-sizing: border-box;
    border-bottom: 2rpx solid #f6f6f8;
    display: flex;
    justify-content: start;
    align-items: center;
    position: relative;
}

.userIcon {
    width: 96rpx;
    height: 96rpx;
    border-radius: 50%;
    overflow: hidden;
    margin-right: 24rpx;
}

.userName {
    width: 500rpx;
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
    letter-spacing: -0.96rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-top: 14rpx;
}

.rightFlow {
    width: 50rpx;
    height: 42rpx;
    position: absolute;
    right: 40rpx;
}

.rightFlow image {
    width: 24rpx;
    height: 42rpx;
    position: absolute;
    right: 0;
}

.myPosterTxt {
    height: 132rpx;
    line-height: 132rpx;
    font-size: 36rpx;
    color: #333;
    letter-spacing: -0.86rpx;
    font-weight: bold;
}

.brandIcon {
    display: inline-block;
    width: 72rpx;
    height: 72rpx;
    background: #FF5577;
    box-shadow: 0 12rpx 24px 0 rgba(255, 85, 119, 0.24);
    border-radius: 16rpx;
    color: #fff;
    line-height: 72rpx;
    text-align: center;
    margin-right: 18rpx;
}
