.imageBox {
    width: 100%;
    height: 2800rpx;
}

.imageBox image {
    width: 100%;
    height: 2800rpx;
    vertical-align: middle;
}

.connectBox {
    width: 100%;
    height: 158rpx;
    position: fixed;
    bottom: 0rpx;
    left: 0rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background: #fff;
}

.connectUs {
    width: 680rpx;
    height: 100rpx;
    background: rgba(255, 85, 119, 1);
    box-shadow: 0px 12rpx 24rpx 0px rgba(255, 85, 119, 0.24);
    border-radius: 48rpx;
    line-height: 108rpx;
    font-size: 48rpx;
    color: white;
    text-align: center;
}

.connetMask {
    width: 100%;
    height: 100vh;
    position: absolute;
    top: 0;
    background: rgba(28, 28, 28, 0.7);
}

.maskBody {
    width: 630rpx;
    height: 374rpx;
    background: #fff;
    border-radius: 16rpx;
    margin: 400rpx auto 0;
}

.qrView {
    width: 100%;
    height: 248rpx;
    font-size: 32rpx;
    color: #f57;
    letter-spacing: -0.78rpx;
    text-align: center;
    box-sizing: border-box;
    padding: 0 40rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.qrView image {
    width: 176rpx;
    height: 176rpx;
}

.saveBtn {
    width: 128rpx;
    height: 60rpx;
    box-sizing: border-box;
    border: 2rpx solid #f57;
    line-height: 60rpx;
    border-radius: 60rpx;
}

.lineVIew {
    width: 100%;
    height: 2rpx;
    background: #e4e6e8;
}

.tellView {
    width: 100%;
    height: 124rpx;
    box-sizing: border-box;
    padding: 0 40rpx;
    font-size: 32rpx;
    color: #f57;
    text-align: center;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
