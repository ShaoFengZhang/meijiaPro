.bg, .posterTemp, #posterScroll, .posterBox {
    background-color: #f2f2f2;
}

.posterTemp {
    width: 100%;
    box-sizing: border-box;
    padding: 0rpx 24rpx;
}

.posterBox {
    width: 100%;
    padding-top: 24rpx;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}

.posterList {
    width: 340rpx;
    margin-bottom: 12rpx;
    position: relative;
    border-radius: 16rpx;
}

.posterIcon image {
    width: 340rpx;
    height: 540rpx;
    box-shadow: 0px 6rpx 12rpx 0px rgba(229, 229, 229, 1);
    border-radius: 16rpx;
}

.posterName {
    font-size: 32rpx;
    color: #3b3b3b;
    letter-spacing: 0;
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-top: 14rpx;
    font-weight: bold;
}

.noMyTempList{
    width: 100%;
    text-align: center;
    color: #888888;
    font-size: 28rpx;
}
